{
    "name": "decodelabs/spectrum",
    "description": "Bring colour to PHP",
    "type": "library",
    "keywords": ["colour", "color"],
    "license": "MIT",
    "authors": [{
        "name": "Tom Wright",
        "email": "tom@inflatablecookie.com"
    }],
    "require": {
        "php": "^7.2|^8.0",
        "symfony/polyfill-php80": "^1.22",

        "decodelabs/glitch-support": "^0.3",
        "decodelabs/coercion": "^0.1",
        "decodelabs/exceptional": "^0.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "phpstan/phpstan": "^1",
        "phpstan/extension-installer": "^1.0",
        "decodelabs/phpstan-decodelabs": "^0.5",
        "symplify/easy-coding-standard": "^10"
    },
    "autoload": {
        "psr-4": {
            "DecodeLabs\\Spectrum\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.1.x-dev"
        }
    },
    "scripts": {
        "analyze": "phpstan analyze --no-progress",
        "psr12": "ecs check --no-progress-bar",
        "psr12-fix": "ecs check --no-progress-bar --fix"
    }
}
